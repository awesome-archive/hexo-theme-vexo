<h3 class="ui header" style="margin-top: 1em; text-align: center;"><%= site.tags.length %> tags now and growing.</h3>
               <div class="ui divider"></div>
             </div>
           </div>
           <div class="ui fluid card">
             <div class="content" style="font-size: 14px !important;"><%= __('tag.lists') %></div>
             <div class="content">
<% var colors = ['red', 'orange', 'yellow', 'olive', 'green', 'teal', 'blue', 'violet', 'purple', 'pink', 'brown', 'grey']; %>
<% site.tags.each(function(tag){ %>
               <a class="ui <%= colors[Math.floor(Math.random() * colors.length)] %> tag site-tag label" href="<%- url_for(tag.path) %>"><%= tag.name %></a>
<% }) %>
