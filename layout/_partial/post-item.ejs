<% if (inIndex) { %>
<div class="ui fluid card">
            <% } %><div class="content post-list-item">
              <table cellpadding="0" cellspacing="0" border="0" width="100%">
                <tbody>
                  <tr>
                    <td width="35" valign="top" align="center"><a class="ui tiny rounded image site-avatar"><img src="<%- url_for(theme.avatar) %>"></a></td>
                    <td width="10"></td>
                    <td width="auto" valign="middle">
                      <a style="font-size: 14px;" href="<%- url_for(post.path) %>"><%= post.title %></a><br>
                      <span style="margin-top: 5px;">
<% if (!inCategory) { %>
<% post.categories.limit(1).each(function(category) { %>
                        <a class="ui label node-link" href="<%- url_for(category.path) %>"><%= category.name %></a><% } %> &nbsp;•&nbsp; 
<% } %>
                        <b><a><%= config.author %></a></b> &nbsp;•&nbsp; <%- full_date(post.date, 'YYYY-MM-DD HH:mm:ss') %>
                      </span>
                    </td>
                    <td width="70" valign="middle" align="right">
                      <a href="<%- url_for(post.path) %>#comment"><span class="disqus-comment-count" data-disqus-identifier="<%= post.path %>"></span></a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
<% if (inIndex) { %>
            <div class="post content">
<% if (post.excerpt) { %>
              <%- post.excerpt %>
<% } else { %>
              <%- post.content %>
<% } %>
            </div>
<% if (post.excerpt) { %>
            <div class="content"><a class="float right" href="<%- url_for(post.path) %>#more">阅读全部</a></div>
<% } %>
          </div>
<% } %>
