<div class="ui fluid card">
            <div class="content"><%= __('widget.recent_posts') %></div>
<% site.posts.sort('date', -1).limit(8).each(function(post){ %>
            <div class="content">
              <table cellpadding="0" cellspacing="0" border="0" width="100%">
                <tbody>
                  <tr>
                    <td width="35" valign="middle" align="center"><a class="ui mini rounded image"><img src="<%- url_for(theme.avatar) %>"></a></td>
                    <td width="10"></td>
                    <td width="auto" valign="middle"><a href="<%- url_for(post.path) %>"><%= post.title %></a></td>
                  </tr>
                </tbody>
              </table>
            </div>
<% }) %>
          </div>
